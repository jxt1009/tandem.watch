server {
    listen 443 ssl;
    server_name watch.toper.dev;

    ssl_certificate     /etc/nginx/ssl/toper.dev.crt;
    ssl_certificate_key /etc/nginx/ssl/toper.dev.key;

    location /ws {
        proxy_pass http://10.0.0.102:30401;

        proxy_http_version 1.1;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";

        proxy_set_header Host $host;

        # Required for long-lived WS connections
        proxy_read_timeout 3600;
        proxy_send_timeout 3600;

        # Disable buffering or nginx may kill the connection
        proxy_buffering off;
    }

    # Also proxy regular HTTP requests
    location / {
        proxy_pass http://10.0.0.102:30401;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
